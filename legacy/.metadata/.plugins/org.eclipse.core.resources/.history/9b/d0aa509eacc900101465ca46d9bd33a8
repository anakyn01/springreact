create table goods_category( mysql용
cateName varchar2(20) not null,
cateCode varchar2(30) not null,
cateCodeRef varchar2(30) null,
foreign key(cateCodeRef) referneces goods_category(cateCode)
);

create table tbl_member(
userId varchar2(50) not null,
userPass varchar2(100) not null,
userName varchar2(30) not null,
userPhone varchar2(20) not null,
userAddr1 varchar2(20) not null,
userAddr2 varchar2(50) not null,
userAddr3 varchar2(50) not null,
regiDate date default sysdate,
verify number default 0
);

시퀀스 만들기
create sequence seq_userId;

오라클 사용자
ALTER SESSION SET "_ORACLE_SCRIPT"=true;
CREATE USER "SHOP_USR" IDENTIFIED BY "1234";
GRANT CONNECT TO "SHOP_USR";
GRANT RESOURCE TO "SHOP_USR";
alter user SHOP_USR default tablespace users quota unlimited on users;